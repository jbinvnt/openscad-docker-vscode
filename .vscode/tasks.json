{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-up",
            "command": "docker-compose",
            "args": [
                "up",
                "-d",
                "--build",
                "--force-recreate"
            ],
            "type": "shell",
            "isBackground": false,
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            },
            "options": {
                "env": {
                    "VSCODE_DRIVEN": "true",
                    "DOCKER_BUILDKIT": "1",
                    "COMPOSE_DOCKER_CLI_BUILD": "1",
                    "BUILDKIT_PROGRESS": "plain"
                }
            }
        },
        {
            "label": "delay-start", // This task pauses long enough for Docker to start the container.
            "command": "sleep 3", // Can be hand-adjusted depending on how quickly Docker starts.
            "type": "shell",
            "dependsOn": "docker-up",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "docker-copy",
            "command": "./copy-binary-from-container.sh",
            "type": "shell",
            "dependsOn": "delay-start",
            "isBackground": false,
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "docker-stop",
            "command": "docker-compose",
            "args": [
                "stop" // using the down command will delete the logs
            ],
            "type": "shell",
            "isBackground": true,
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "revealProblems": "onProblem"
            }
        },
        {
            "label": "docker-logs",
            "command": "docker-compose",
            "args": [
                "logs"
            ],
            "type": "shell",
            "isBackground": false,
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "revealProblems": "onProblem"
            },
            "dependsOn": "docker-stop" // must stop the container before showing logs
        }
    ]
}